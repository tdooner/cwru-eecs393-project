!!!
%html
  %head
    %title ZombieGameEngine
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }
    =stylesheet_link_tag    "application", :media => "all"
    =javascript_include_tag "application"
    =csrf_meta_tags
    :css
      body, html {
      }
      .jumbotron {
        padding-top: 20px;
        padding-bottom: 40px;
        position: relative;
        background-color: #58FF3A;
      }
  %body
    %header.jumbotron
      .container
        .row
          .span8
            %h1 Case HvZ
            %h3 Humans vs. Zombies
        .row
          .span4.offset8
            :plain
              Home | Scoreboard |
            - if user_signed_in?
              = link_to "Log Out", destroy_user_session_path
            - else
              = link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook)
    =flash[:error]
    =flash[:alert]
    =flash[:notice]
    .container
      .row
        .span4.visible-desktop
          =current_user.inspect
        .span8
          =yield
